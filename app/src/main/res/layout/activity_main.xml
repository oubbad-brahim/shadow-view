<?xml version="1.0" encoding="utf-8"?>
<com.example.shadowview.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:padding="@dimen/_12sdp"
    app:shadowColor="#FF0000"
    app:shadowCornerRadius="@dimen/_12sdp"
    app:shadowDx="0dp"
    app:shadowDy="0dp"
    app:shadowRadius="1000dp">

    <View
        android:id="@+id/v_box"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/bg_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</com.example.shadowview.ShadowLayout>